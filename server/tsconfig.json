{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", 
    "moduleResolution": "node",
    "outDir": "../dist/server", 
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      // Define any path aliases specific to server code if needed in the future
      // e.g., "@utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules"]
} 